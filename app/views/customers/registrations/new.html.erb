<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>



  <div class="field">

    <%= f.label :（姓） %><br />
     <p>名前<%= f.text_field :last_name, autofocus: true %></p>
  </div>
  <div class="field">
    <%= f.label :（名） %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :（セイ） %><br />
    <p>フリガナ<%= f.text_field :last_name_kana, autofocus: true %></p>
  </div>
  <div class="field">
    <%= f.label :（メイ） %><br />
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>
  <div class="field">
    <%#= f.label :メールアドレス %><br />
    <p>メールアドレス<%= f.email_field :email, autofocus: true %></p>
  </div>
  <div class="field">
    <%#= f.label :郵便番号（ハイフンなし） %><br />
    <p>郵便番号（ハイフンなし）<%= f.text_field :postal_code, autofocus: true %></p>
  </div>
  <div class="field">
    <%#= f.label :住所 %><br />
    <p>住所<%= f.text_field :address, autofocus: true %></p>
  </div>
  <div class="field">
    <%#= f.label :電話番号（ハイフンなし） %><br />
    <p>電話番号（ハイフンなし）<%= f.text_field :telephone_number, autofocus: true %></p>
  </div>

  <div class="field">
    <%#= f.label :パスワード（6文字以上） %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <p>パスワード（6文字以上）<%= f.password_field :password, autocomplete: "new-password" %></p>
  </div>

  <div class="field">
    <%#= f.label :パスワード（確認用） %><br />
    <p>パスワード（確認用）<%= f.password_field :password_confirmation, autocomplete: "new-password" %></p>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
