<h1>商品新規登録</h1>
<%= form_with model: @item, local:true do |f| %>
  <div class="form-control-file user_image">  
    <label for="inputImage">商品画像</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </div>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  <%= f.text_area :genre_id %>
  <h4>税抜価格</h4>
  <%= f.text_area :price %>
  <%= f.submit '新規登録' %>
<% end %>