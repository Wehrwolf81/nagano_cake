<h1>商品一覧</h1>
<div class="container">
<table class="table table-striped">
      <thead>
        <tr>
         <th>商品ID</th>
         <th>商品名</th>
         <th>税抜価格</th>
         <th>ジャンル</th>
         <th>ステータス</th>
         <th colspan="3"></th>
        </tr>
      </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to items.name, item_path(item.id) %></td>
          <td><%= items.price %></td>
          <td><%= items.genre_id %></td>
          <td><%= items.is_active %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
  </div>