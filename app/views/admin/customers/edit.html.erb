<div class="container">
  <div class="row">
    <div class="col-sm12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2><% @customer.first_name %>さんの会員情報編集</h2>
      <%= form_for(@customer, url: admin_customer_path(@customer.id)) do |f| %>
      <div class="form-group">
        <h4>会員ID</h4>
  　　　　<%= @customer.id %>
        <h4>氏名</h4>
        <%= f.text_field :first_name, autofocus: true %>
        <!--:last_name,-->

        <h4>フリガナ</h4>
        <%= f.text_field :first_name_kana %>
        <!--:last_name_kana,-->
        <h4>郵便番号</h4>
        <%= f.text_field :postal_code %>
        <h4>住所</h4>
        <%= f.text_area :address%>
        <h4>電話番号</h4>
        <%= f.text_area :telephone_number %>
      　<h4>メールアドレス</h4>
        <%= f.text_area :email%>
        <h4>会員ステータス</h4>
        <%= f.radio_button :is_deleted, :active,checked: true %>
        <%= f.label :is_active, "有効", {value: :active, style: "display: inline-block;"} %>
        <%= f.radio_button :is_deleted, :withdrawal %>
        <%= f.label :is_active, "退会", {value: :withdrawal, style: "display: inline-block;"} %>
        <%#= form.radio_button :is_active, :有効,checked: true %>
        <%#= form.radio_button :is_active, :退会 %>
        <div class="btn btn-secondary">
        <%= f.submit "変更を保存" %>
      <% end %>
        </div>
      </div>
    </div>
  </div>
 </div>
