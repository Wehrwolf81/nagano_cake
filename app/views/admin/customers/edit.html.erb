<div class="container">
  <div class="row">
    <div class="col-sm12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2><% @customer.name %>さんの会員情報編集</h2>
      <%= form_with model:@customer, local:true do |f| %>
      <div class="form-group">
        <h4>会員ID</h4>
  　　　　<%= customer.id %>
        <h4>氏名</h4>
        <%= f.text_field :last_name,:first_name, autofocus: true %>

        <h4>フリガナ</h4>
        <%= f.text_field :last_name_kana,:first_name_kana %>
        <h4>郵便番号</h4>
        <%= f.text_field :postal_code %>
        <h4>住所</h4>
        <%= f.text_area :address%>
        <h4>電話番号</h4>
        <%= f.text_area :telephon_number %>
      　<h4>メールアドレス</h4>
        <%= f.text_area :email%>
        <h4>会員ステータス</h4>
        <%= form.radio_button :is_active, :有効,checked: true %>
        <%= form.radio_button :is_active, :退会 %>
        <div class="btn btn-secondary">
          <%= f.submit "変更を保存" %>
      <% end %>
        </div>
      </div>
    </div>
  </div>
 </div>
