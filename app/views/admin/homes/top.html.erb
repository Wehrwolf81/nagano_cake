<h1>注文履歴一覧</h1>
<table>
 <thead>
  <tr>
   <% @customers.each do |customer| %>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  
    <th colspan="3"></th>
   </tr>
 </thead>
 <tbody>
  <tr>
    <span>
      <%= customer.created_at,order_path(customer.id) %>
    </span>
   <td><%= customer.customer_id %></td>
   <td><%= customer.amount %></td>
   <td><%= customer.making_status %></td>
  </tr>
 </tbody>
</table>
<% end %>

<%= paginate @cus %>