<h1>注文履歴一覧</h1>
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-8 offset-md-2 ">
      <table>
        <thead>
        <tr>

          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <% count=0 %>
          <% order.order_details.each do |order_detail| %>
          <% count+=order_detail.amount %>
          <% end %>
        <tr>
          <td>
           <%= link_to order.created_at,admin_order_path(@customer.id) %>
          </td>
          <td><%= order.name %></td>
          <td><%= count %></td>
          <td><%= order.status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div>


