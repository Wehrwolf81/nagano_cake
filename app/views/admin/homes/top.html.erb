<h1>注文履歴一覧</h1>
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-8 offset-md-2 ">
      <table>
        <thead>
        <tr>
         <% @customers.each do |customer| %>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>
           <%#= link_to customer.created_at,admin_order_path(@customer.id) %>
          </td>
          <td><%= customer.first_name %></td>
          <td><%#= customer.amount %></td>
          <td><%#= customer.making_status %></td>
        </tr>
        </tbody>
      </table>
     <% end %>
  </div>
  </div>
</div>

<%= paginate @customers %>