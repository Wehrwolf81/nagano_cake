<h1>ジャンル一覧・追加</h1>
<%= form_for(@new_genre, url: admin_genres_path) do |f| %>
 <%= f.text_field :name %>
 <%= f.submit '新規登録' %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table class="table table-striped">
        <thead>
          <tr>
           <th></th>
           <th>ジャンル名</th>
           <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td></td>
              <td><%= link_to '編集', edit_admin_genre_path(genre),class: 'btn btn-default' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>