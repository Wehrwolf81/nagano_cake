          <%# end %>
          <%= form_for order_detail,url: admin_order_path(@order) do |f| %>
          <%= f.select :making_status, order_detail.making_status.keys.map {|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]} %>
          <%= f.submit "更新"%>
          <% end %>
          </td>

        </tr>
      <% end %>
