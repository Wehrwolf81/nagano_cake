<h1>注文履歴詳細</h1>
  <% @orders.each do |order| %>
    <h4>購入者</h4>
    <%= order.id %>
    <h4>注文日</h4>
    <%= order.name %>
    <h4>配送先</h4>
    <%= order.price %>
    <h4>支払方法</h4>
    <%= order.genre_id %>
    <h4>注文ステータス</h4>
    <%= order.is_active %>
  <% end %>



<div class="container">
<table class="table table-striped">
      <thead>
        <tr>
         <th>商品名</th>
         <th>単価(税込)</th>
         <th>数量</th>
         <th>小計</th>
         <th>製作ステータス</th>
         <th colspan="3"></th>
        </tr>
      </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to customer.name, customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td><%= items.is_deleted %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
  </div>