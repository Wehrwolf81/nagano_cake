        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= @subtotal = order_detail.price*order_detail.amount %></td>
          <% @total += @subtotal %>
          <%#= form_for @order,url: admin_order_path(@order) do |f| %>
