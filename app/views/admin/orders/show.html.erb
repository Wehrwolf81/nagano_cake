<h1>注文履歴詳細</h1>
  <% form_for @order,url: admin_order_path(@order) do |f| %>
    <p>購入者<%#= @order.customer_id.full_name %></p>
    <p>注文日<%= @order.created_at %></p>
    <p>配送先<%= @order.address %></p>
    <p>支払方法<%= @order.payment_method %></p>
    <p>注文ステータス
      <%= form_for @order,url: admin_order_path(@order) do |f| %>
      <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
      <%= f.submit "更新"%>
      <% end %>
    </p>
    <%#= order.status %>
  <% end %>



<div class="container">
<table class="table table-striped">
      <thead>
        <tr>
