         <th>数量</th>
         <th>小計</th>
         <th>製作ステータス</th>
        </tr>
      </thead>

    <tbody>
      <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= @subtotal = order_detail.price*order_detail.amount %></td>
          <% @total += @subtotal %>
          <%= form_for @order,url: admin_order_path(@order) do |f| %>
          <%= f.select :making_status, Order.statuses.keys %>
          .map {|k| [I18n.t("enums.order.status.#{k}"), k]}
          <%#= f.select :making_status, options_for_select_from_enum(OrderDetail, :making_status) %>
          <%= f.submit "更新" %>
          <% end %>
          </td>

        </tr>
      <% end %>
