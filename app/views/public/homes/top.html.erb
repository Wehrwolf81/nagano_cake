<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table class="table table-striped">
      <thead>
        <tr>
         <th>ジャンル名検索</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |ganre| %>
          <tr>
            <td><%= ganre.name %></td>
          </tr>
      <% end %>
      </tbody>
      </table>
    </div>

    <div class="col-md-9 ">
      <% @items.each do |item| %>
      <td>
        <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
        <% end %>
      </td>
      <%= item.name %>
      <%= item.price %>
      <% end %>
    </div>
  </div>
</div>