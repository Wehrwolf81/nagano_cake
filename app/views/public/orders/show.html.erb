<h1>注文履歴詳細</h1>
 <div class="container">
   <div class="col-md-8 offset-md-1">
    <table class="table table-striped">
      <thead>
        <tr>
         <th>商品</th>
         <th>単価(税込)</th>
         <th>個数</th>
         <th>小計</th>
         <th colspan="3"></th>
        </tr>
      </thead>

    <tbody>
      <% @order.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.address%></td>
          <td><%= order.id %></td>
          <td><%= order.total_payment %></td>
          <td><%= order.status %></td>
          <td><%= link_to '表示する', edit_address_path(@order),class: 'btn btn-default' %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
 </div>
</div>