 <div class="container">
  <div class="row">
    <div class="col-md-9 offset-md-1">
      <table class="table table-striped">
          <tr>
            <th>注文日</th>
            <td><%= @order.updated_at %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.address%></td>
          </tr>
          <tr>
           <th>支払方法</th>
           <td><%= @order.payment_method %></td>
          </tr>
          <tr>
           <th>ステータス</th>
           <td><%= @order.status%></td>
          </tr>
