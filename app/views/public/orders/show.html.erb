<h1>注文履歴詳細</h1>
  <table class="table table-striped">
      <thead>
        <tr>
         <th>商品名</th>
         <th>単価(税込)</th>
         <th>個数</th>
         <th>小計</th>
        </tr>
      </thead>

    <tbody>
      <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name%></td>
          <td><%= (order_detail.price * 1.1).floor %></td>
          <td><%= order_detail.amount %></td>
          <td><%= @subtotal = (order_detail.price * 1.1).floor*order_detail.amount %></td>
          <% @total += @subtotal %>
        </tr>
      <% end %>
    </tbody>
    </table>



 <div class="container">
  <div class="row">
    <div class="col-md-9 offset-md-1">
      <table class="table table-striped">
          <tr>
            <th>注文日</th>
            <td><%= @order.updated_at %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.address%></td>
          </tr>
          <tr>
           <th>支払方法</th>
           <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
           <th>ステータス</th>
           <td><%= @order.status_i18n%></td>
          </tr>
        <tbody>
        </tbody>
      </table>
    </div>
    <div class="col-md-2">
      <table class="table table-striped">
        <tr>
          <th>商品合計</th>
          <td><%= @total %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_cost = 800 %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @total += @order.shipping_cost %></td>
        </tr>
      </table>
      </div>
  </div>
</div>



