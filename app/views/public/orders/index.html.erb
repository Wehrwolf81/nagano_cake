<h1>注文履歴一覧</h1>
 <div class="container">
   <div class="col-md-8 offset-md-1">
    <table class="table table-striped">
      <thead>
        <tr>
         <th>注文日</th>
         <th>配送先</th>
         <th>注文商品</th>
         <th>支払金額</th>
         <th>ステータス</th>
         <th>注文詳細</th>
        </tr>
      </thead>

      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.address %></td>
              <% order.order_details.each do |order_detail| %>
               <td><%= order_detail.item.name %></td>
               <% @subtotal = order_detail.price*order_detail.amount %>
               <% @total += @subtotal %>
              <% end %>
               <% order.shipping_cost = 800 %>
               <% @total += order.shipping_cost %>
          <td><%= @total %></td>


          <td><%#= @total += order.shipping_cost %></td>
          <td><%= order.status %></td>
          <td><%= link_to '表示する', public_order_path(order),class: 'btn btn-default' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
   </div>
 </div>
</div>