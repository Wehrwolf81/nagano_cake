<h1>注文情報確認</h1>


 <div class="container">
  <div class="col-md-8 offset-md-1">
    <table class="table table-striped">
      <thead>
        <tr>
         <th>商品名</th>
         <th>単価(税込)</th>
         <th>数量</th>
         <th>小計</th>
        </tr>
      </thead>

    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name%></td>
          <td><%= cart_item.item.price%></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal%></td>
          <% @total += cart_item.subtotal %>
        </tr>
      <% end %>
    </tbody>
    </table>
    <div class="col-md-3">
        <p>送料<%= @order.shipping_cost = 800 %></p>
        <p>商品合計<%= @total %></p>
        <p>請求金額<%= @total += @order.shipping_cost %></p>

    </div>
    <p>支払方法<%= @order.payment_method_i18n %></p>
    <p>お届け先<%= @order.address %></p>
    <%= form_for @order, url: orders_path do |f| %>
      <%= f.hidden_field :payment_method, value: @order.payment_method %>
      <%= f.hidden_field :address, value: @order.address %>
      <%= f.hidden_field :status, value: "waiting_for_deposit" %>
      <%= f.hidden_field :shipping_cost, value: @order.shipping_cost %>
      <%= f.hidden_field :total_payment, value: @total += @order.shipping_cost %>
      <%= f.hidden_field :postal_code, value: @order.postal_code %>
      <%#= f.hidden_field :amount, value: @order.item.amount %>
      <%= f.hidden_field :customer_id, value: current_customer.id %>
      <%= f.hidden_field :name, value: @order.name %>
      <%#= f.hidden_field :price, value: @order.item.price %>
      <!--保存してcreateに渡さなければならないものhidden_fieldにいれる-->
    <%= f.submit '注文を確定する', class: 'btn btn-default' %>
    <% end %>
    </div>
 </div>
</div>