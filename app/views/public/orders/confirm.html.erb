<h1>注文情報確認</h1>
 <div class="container">
   <div class="col-md-8 offset-md-1">
    <table class="table table-striped">
      <thead>
        <tr>
         <th>商品名</th>
         <th>単価(税込)</th>
         <th>数量</th>
         <th>小計</th>
        </tr>
      </thead>

    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item_id.name%></td>
          <td><%= cart_item.item_id.price%></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal%></td>
          <td><%= link_to '注文を確定する', public_complte_path,class: 'btn btn-default' %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
 </div>
</div>