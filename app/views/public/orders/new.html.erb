<h2>支払方法</h2>
<%= form_for @order, url: public_order_confirm_path do |f| %>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

<h2>届け先</h2>


<h5>ご自身の住所</h5>
<%= radio_button_tag :select_address, 0 %>
<%= current_customer.full_address %>

<h5>登録済み住所から選択</h5>
<%= radio_button_tag :select_address, 1 %>
<%#= f.collection_select :address, Address.all, :id, :address %>
<%= f.select :address, options_from_collection_for_select(Address.all, :id, :full_address) %>

   <h5>新しいお届け先</h5>
   <%= radio_button_tag :select_address, 2 %>
     <p>郵便番号：<%= f.text_field :postal_code, autofocus: true %></p>
     <p>住所：<%= f.text_field :address %></p>
     <p>宛名：<%= f.text_field :name %></p>
  <%= f.submit '確認画面に進む'%>
 <% end %>


