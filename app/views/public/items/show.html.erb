
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table class="table table-striped">
      <thead>
        <tr>
         <th>ジャンル名検索</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
      <% end %>
      </tbody>
      </table>
    </div>
    <div class="col-md-9">
      <%= form_for(@cart_item, url: public_cart_items_path) do |f| %>
        <%= attachment_image_tag @item, :image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <strong><%= @item.name %></strong>
        <%= @item.introduction%>
        <%= @item.price %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.hidden_field :customer_id, value: current_customer.id %>
        <%= f.select :amount, *[1..10] , include_blank: "選択して下さい" %>
        <%= f.submit 'カートに入れる' %>

        <% end %>
    </div>
</div>