
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table class="table table-striped">
      <thead>
        <tr>
         <th>ジャンル名検索</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
