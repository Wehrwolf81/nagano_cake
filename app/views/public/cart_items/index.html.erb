<h1>ショッピングカート</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th> 商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
          <%= attachment_image_tag cart_item.item, :image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <%= cart_item.item.name%>
          </td>
          <td><%= cart_item.item.with_tax_price%></td>
          <td><%= cart_item.amount %></td>
          <%= cart_item.select :amount, *[1..10] %>
          <td><%= cart_item.subtotal%></td>
          <% @totalpayment +=  (cart_item.item.price * 1.1).floor * cart_item.amount %>
          <td><%= link_to '削除する', public_cart_item_path(cart_item.id), class: 'btn btn-default' ,method: :delete, data: { confirm: '本当に消しますか?' } %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
