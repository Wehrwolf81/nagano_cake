<h1>ショッピングカート</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th> 商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <%= link_to 'カートを空にする', cart_items_path, class: 'btn btn-default' ,method: :delete, data: { confirm: '本当に消しますか?' } %>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
          <%= attachment_image_tag cart_item.item, :image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
          <%= cart_item.item.name%>
          </td>
          <td><%= cart_item.item.with_tax_price%></td>
          <td>
          <%= form_for cart_item,url: cart_item_path(cart_item) do |f| %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit "変更" %>
          <% end %>
          </td>
          <td><%= cart_item.subtotal.to_i %></td>
          <% @total += cart_item.subtotal %>
          <% @totalpayment +=  cart_item.item.price * cart_item.amount.to_i %>
          <td><%= link_to '削除する', cart_item_path(cart_item.id), class: 'btn btn-default' ,method: :delete, data: { confirm: '本当に消しますか?' } %></td>
        </tr>
      <% end %>
        <td><%= link_to '買い物を続ける', root_path, class: 'btn btn-default' %></td>
        <td><%= link_to '情報入力に進む', new_order_path, class: 'btn btn-default' %></td>
        <p>合計金額<%= @total %></p>
    </tbody>
  </table>
  </div>
