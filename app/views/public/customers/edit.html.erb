<div class="container">
  <div class="row">
    <div class="col-sm12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>会員情報編集</h2>
      <%#= form_for(resource, as: resource_name, url: edit_public_customer_path(resource_name)) do |f| %>
      <%= form_for @customer, url: public_customer_path do |f| %>
      <div class="form-group">
        <h4>会員ID</h4>
  　　　　<%= @customer.id %>
        <h4>氏名</h4>
        <%= f.text_field :last_name, autofocus: true %>
        <%= f.text_field :first_name, autofocus: true %>
        <h4>フリガナ</h4>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
        <h4>郵便番号</h4>
        <%= f.text_field :postal_code %>
        <h4>住所</h4>
        <%= f.text_area :address%>
        <h4>電話番号</h4>
        <%= f.text_area :telephone_number %>
      　<h4>メールアドレス</h4>
        <%= f.text_area :email%>
        <div class="btn btn-secondary">
          <%= f.submit "編集を保存" %>
        </div>
        <div class="btn btn-secondary">
          <%= link_to "退会する", public_confirm_path(current_customer) %>
        </div>
        <!--<div class="btn btn-secondary">-->
          <%#= f.submit "退会する" %>
        <!--</div>-->
      　<% end %>

      </div>
    </div>
  </div>
 </div>
