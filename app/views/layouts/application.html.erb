<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <header>
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
     <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="container">
          <%= link_to 'Logo', root_path, class: 'navbar-brand text-light' %>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <%= link_to '商品一覧',items_path %>
              <%= link_to '会員一覧 ', customers_path %>
              <%= link_to '注文履歴一覧', root_path %>
              <%= link_to 'ジャンル一覧', genres_path %>
              <%= link_to "ログアウト", destroy__session_path, method: :delete %>
            <% else %>
              <%= link_to "About", home_about_path %>
              <%= link_to "商品一覧",%>
              <%= link_to "新規登録",  %>
              <%= link_to "ログイン", %>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
    <%= yield %>
  </body>
</html>
